{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "aurora-input-processor",
  "title": "Aurora Input Processor",
  "description": "Aurora Input Processor - Manage and execute prompts from multiple directories",
  "icon": "icon.png",
  "author": "wheat2021",
  "license": "MIT",
  "commands": [
    {
      "name": "manage-processors",
      "title": "Manage Input Processors",
      "description": "Manage your input processors",
      "mode": "view"
    },
    {
      "name": "create-processor",
      "title": "Create Input Processor",
      "description": "Create a new input processor",
      "mode": "view"
    },
    {
      "name": "manage-ai",
      "title": "Manage AI Providers",
      "description": "Manage your AI providers and settings",
      "mode": "view"
    },
    {
      "name": "processor-1",
      "title": "Processor 1",
      "description": "Processor slot 1 for custom prompts",
      "mode": "view",
      "disabledByDefault": true,
      "preferences": [
        {
          "name": "processorId",
          "type": "textfield",
          "required": false,
          "title": "Processor ID",
          "description": "The ID of the processor to use"
        }
      ]
    },
    {
      "name": "processor-2",
      "title": "Processor 2",
      "description": "Processor slot 2 for custom prompts",
