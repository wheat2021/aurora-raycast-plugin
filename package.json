        }
      ]
    },
    {
      "name": "ask-ai",
      "title": "Ask AI",
      "description": "Ask questions to various AI assistants (Perplexity, ChatGPT, Claude, etc.)",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "type": "text",
          "placeholder": "Ask anything...",
          "required": false
        },
        {
          "name": "provider",
          "type": "text",
          "placeholder": "AI provider ID",
          "required": false
        }
      ],
      "preferences": [
        {
          "name": "useAppWhenAvailable",
          "type": "checkbox",
          "required": false,
          "title": "Use App When Available",
          "description": "Use native app instead of web browser when available",
          "default": false,
          "label": "Prefer native apps"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.8",
    "@raycast/utils": "^2.2.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^8.57.1",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "release": "pnpm build && open 'raycast://extensions/raycast/developer/import-extension'",
    "prepublish": "pnpm lint && pnpm build",
    "publish": "pnpm prepublish && npx @raycast/api@latest publish"
  }
}
