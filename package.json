        }
      ]
    },
    {
      "name": "processor-4",
      "title": "Processor 4",
      "description": "Processor slot 4 for custom prompts",
      "mode": "view",
      "disabledByDefault": true,
      "preferences": [
        {
          "name": "processorId",
          "type": "textfield",
          "required": false,
          "title": "Processor ID",
          "description": "The ID of the processor to use"
        }
      ]
    },
    {
      "name": "processor-5",
      "title": "Processor 5",
      "description": "Processor slot 5 for custom prompts",
      "mode": "view",
      "disabledByDefault": true,
      "preferences": [
        {
          "name": "processorId",
          "type": "textfield",
          "required": false,
          "title": "Processor ID",
          "description": "The ID of the processor to use"
        }
      ]
    },
    {
      "name": "processor-6",
      "title": "Processor 6",
      "description": "Processor slot 6 for custom prompts",
      "mode": "view",
      "disabledByDefault": true,
      "preferences": [
        {
          "name": "processorId",
          "type": "textfield",
          "required": false,
          "title": "Processor ID",
